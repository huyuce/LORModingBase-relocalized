                    <Grid Grid.Row="0">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnAddDropBooks" Content="+" ToolTip="添加游戏中没有的掉落书籍" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="DropBookGridButtonClickEvents"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnLoadDropBooks" Content="~" ToolTip="从游戏内部加载掉落书籍数据" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="DropBookGridButtonClickEvents"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SplDropBooks" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Grid}">
                                    <Setter Property="Margin" Value="5,5,5,5"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Name="GrdPassives">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="95*"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MainBg.png"/>
                </Grid.Background>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
