                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-22" Y="-30"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <Button x:Name="BtnResources" Grid.Column="6" ToolTip="管理外部自定义资源" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="MainWindowButtonClickEvents">
                        <Button.Background>
                            <ImageBrush ImageSource="./Resources/BtnResources.png" />
                        </Button.Background>
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="15" ScaleY="15"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-27" Y="-30"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>

                    <Button x:Name="BtnStartGame" Grid.Column="7" ToolTip="启动游戏" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="MainWindowButtonClickEvents">
                        <Button.Background>
                            <ImageBrush ImageSource="./Resources/BtnStartGame.png" />
                        </Button.Background>
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="15" ScaleY="15"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-27" Y="-30"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>

                    <Button x:Name="BtnOpenBaseFolder" Grid.Column="8" ToolTip="기반모드 폴더 경로를 엽니다" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="MainWindowButtonClickEvents">
                        <Button.Background>
                            <ImageBrush ImageSource="./Resources/BtnOpenBaseFolder.png" />
                        </Button.Background>
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="15" ScaleY="15"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-27" Y="-30"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <Button x:Name="BtnOpenExportFolder" Grid.Column="9" ToolTip="打开导出创建程序的文件夹的文件夹路径" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="MainWindowButtonClickEvents">
                        <Button.Background>
                            <ImageBrush ImageSource="./Resources/BtnOpenExportFolder.png" />
                        </Button.Background>
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="15" ScaleY="15"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-27" Y="-30"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <Button x:Name="BtnExtURL" Grid.Column="10" ToolTip="打开用于移动与该工具相关的外部URL的窗口-需要魔法" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="MainWindowButtonClickEvents">
                        <Button.Background>
                            <ImageBrush ImageSource="./Resources/BtnExtURL.png" />
                        </Button.Background>
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="15" ScaleY="15"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-27" Y="-30"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>

                    <Button x:Name="BtnTools" Grid.Column="11" ToolTip="打开此程序提供的其他功能的窗口" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="MainWindowButtonClickEvents">
                        <Button.Background>
                            <ImageBrush ImageSource="./Resources/BtnTools.png" />
                        </Button.Background>
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="15" ScaleY="15"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-27" Y="-30"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <Button x:Name="BtnConfig" Grid.Column="12" ToolTip="打开“程序设置”窗口" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="MainWindowButtonClickEvents">
                        <Button.Background>
                            <ImageBrush ImageSource="./Resources/BtnConfig.png" />
                        </Button.Background>
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="15" ScaleY="15"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-27" Y="-30"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MenuBg.png"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="8*"/>

                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="8*"/>

                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Viewbox Grid.Column="0" Stretch="Fill" Margin="10">
                    <Button x:Name="BtnCriticalPage" Content="[编辑核心书页]" ToolTip="编辑核心书页" Style="{StaticResource StyBtnMenu}" Click="MainWindowButtonClickEvents"/>
                </Viewbox>
                <Viewbox Grid.Column="1" Stretch="Fill" Margin="10">
                    <Button x:Name="BtnCards" Content="[编辑战斗书页]" ToolTip="编辑战斗书页" Style="{StaticResource StyBtnMenu}" Click="MainWindowButtonClickEvents"/>
                </Viewbox>
                <Viewbox Grid.Column="2" Stretch="Fill" Margin="10">
                    <Button x:Name="BtnStages" Content="[编辑舞台]" ToolTip="编辑舞台" Style="{StaticResource StyBtnMenu}" Click="MainWindowButtonClickEvents"/>
                </Viewbox>
                <Viewbox Grid.Column="3" Stretch="Fill" Margin="10">
                    <Button x:Name="BtnEnemy" Content="[编辑敌方单位]" ToolTip="编辑敌方单位" Style="{StaticResource StyBtnMenu}" Click="MainWindowButtonClickEvents"/>
                </Viewbox>
                <Viewbox Grid.Column="4" Stretch="Fill" Margin="10">
                    <Button x:Name="BtnDecks" Content="[编辑索引]" ToolTip="转到编辑索引界面" Style="{StaticResource StyBtnMenu}" Click="MainWindowButtonClickEvents"/>
                </Viewbox>
                <Viewbox Grid.Column="5" Stretch="Fill" Margin="10">
                    <Button x:Name="BtnDropBook" Content="[编辑书籍]" ToolTip="转到编辑书籍界面" Style="{StaticResource StyBtnMenu}" Click="MainWindowButtonClickEvents"/>
                </Viewbox>
                <Viewbox Grid.Column="6" Stretch="Fill" Margin="10">
                    <Button x:Name="BtnPassive" Content="[被动编辑]" ToolTip="被动编辑-PassiveAbility" Style="{StaticResource StyBtnMenu}" Click="MainWindowButtonClickEvents"/>
                </Viewbox>
                <Viewbox Grid.Column="7" Stretch="Fill" Margin="10">
                    <Button x:Name="BtnCardAbility" Content="[编辑卡片效果]" ToolTip="编辑卡片效果-DiceCardSelfAbility" Style="{StaticResource StyBtnMenu}" Click="MainWindowButtonClickEvents"/>
                </Viewbox>
                <Viewbox Grid.Column="8" Stretch="Fill" Margin="10">
                    <Button x:Name="BtnBuff" Content="[编辑buff]" ToolTip="编辑自定义buff-BattleUnitBuf" Style="{StaticResource StyBtnMenu}" Click="MainWindowButtonClickEvents"/>
                </Viewbox>
            </Grid>

            <Grid Grid.Row="2" Name="GrdCriticalPage">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="95*"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MainBg.png"/>
                </Grid.Background>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnAddCriticalBook" Content="+" ToolTip="添加游戏中没有的新核心书页" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="CriticalPageGridButtonClickEvents"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnLoadCriticalBook" Content="~" ToolTip="从游戏内部加载核心书页" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="CriticalPageGridButtonClickEvents"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SplCriticalPage" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Grid}">
                                    <Setter Property="Margin" Value="5,5,5,5"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Name="GrdCards">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="95*"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MainBg.png"/>
                </Grid.Background>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnAddCard" Content="+" ToolTip="添加游戏中没有的新战斗书页" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="BattleCardGridButtonClickEvents"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnLoadCard" Content="~" ToolTip="从游戏内部载入战斗书页数据" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="BattleCardGridButtonClickEvents"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SplCards" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Grid}">
                                    <Setter Property="Margin" Value="5,5,5,5"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Name="GrdStages">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="95*"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MainBg.png"/>
                </Grid.Background>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnAddStage" Content="+" ToolTip="添加游戏中没有的新舞台" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="StageGridButtonClickEvents"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnLoadStage" Content="~" ToolTip="从游戏内部加载舞台数据" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="StageGridButtonClickEvents"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SplStages" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Grid}">
                                    <Setter Property="Margin" Value="5,5,5,5"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <Grid Grid.Row="3" Name="GrdEmemy">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="95*"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MainBg.png"/>
                </Grid.Background>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnAddEnemy" Content="+" ToolTip="添加游戏中没有的新敌人数据" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="EnemyGridButtonClickEvents"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnLoadEnemy" Content="~" ToolTip="从游戏内部加载敌方数据" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="EnemyGridButtonClickEvents"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SplEnemy" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Grid}">
                                    <Setter Property="Margin" Value="5,5,5,5"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Name="GrdDecks">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="95*"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MainBg.png"/>
                </Grid.Background>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnAddDecks" Content="+" ToolTip="添加游戏中没有的新舞台" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="DecksGridButtonClickEvents"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnLoadDecks" Content="~" ToolTip="从游戏内部加载舞台数据" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="DecksGridButtonClickEvents"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SplDecks" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Grid}">
                                    <Setter Property="Margin" Value="5,5,5,5"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
