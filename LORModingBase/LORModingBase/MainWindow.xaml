                </Grid>
                <Grid Grid.Column="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SqlPassives" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Grid}">
                                    <Setter Property="Margin" Value="5,5,5,5"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Name="GrdCardAbilities">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="95*"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MainBg.png"/>
                </Grid.Background>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnAddCardAbility" Content="+" ToolTip="添加游戏中没有的新战斗书页效果" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="CardAbilityGridButtonClickEvents"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnLoadCardAbility" Content="~" ToolTip="从游戏内部加载战斗书页效果数据" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="CardAbilityGridButtonClickEvents"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SqlCardAbilies" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Grid}">
                                    <Setter Property="Margin" Value="5,5,5,5"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Name="GrdBuff">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="95*"/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MainBg.png"/>
                </Grid.Background>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnAddBuff" Content="+" ToolTip="添加游戏中没有的新Buff" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="BuffGridButtonClickEvents"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Rectangle RadiusX="5" RadiusY="5" Fill="#54000000" Margin="3"/>
                        <Button x:Name="BtnLoadBuff" Content="~" ToolTip="从游戏内部加载Buff数据" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="BuffGridButtonClickEvents"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SqlBuffs" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Grid}">
                                    <Setter Property="Margin" Value="5,5,5,5"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Grid.ColumnSpan="2" Margin="55.8,0,-0.4,0.4">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="68*"/>
                <RowDefinition Height="16*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MenuBg.png"/>
                </Grid.Background>
                <ComboBox Name="LbxTextEditor" Margin="5" ToolTip="更改要显示文本的数据" SelectionChanged="LbxTextEditor_SelectionChanged"/>
                <Label Content="TestFile.txt" Name="LblTextEditor" FontSize="15" FontFamily="Nirmala UI" FontWeight="Bold" Padding="8" Foreground="#FF121212" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2,0,1.6" Width="270"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MenuBg.png"/>
                </Grid.Background>
                <Button x:Name="BtnReverseLoad" Grid.Column="0" ToolTip="将编辑器中编辑的内容加载到程序中" FontSize="50"  Style="{StaticResource StyBtnMenu}" HorizontalAlignment="Center" Click="EditorButtonClickEvents">
                    <Button.Background>
                        <ImageBrush ImageSource="./Resources/BtnReverseLoad.png" />
                    </Button.Background>
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="15" ScaleY="15"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-27" Y="-30"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MainBg.png"/>
                </Grid.Background>
                <TextBox x:Name="TbxTextEditor" Text="" Grid.Row="1" ToolTip="预览要创建的数据" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"/>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.Background>
                    <ImageBrush ImageSource="./Resources/MenuBg.png"/>
                </Grid.Background>
                <TextBox x:Name="TbxTextEditorLog" Text="" Grid.Row="1" ToolTip="创建数据时发生的日志" FontSize="15" Style="{StaticResource StyTbx}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" TextWrapping="Wrap"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
